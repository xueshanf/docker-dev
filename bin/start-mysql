#!/bin/bash
set -e #-x

APPS=${APPS:-/mnt/apps}

SCRIPT_HOME="$( cd "$( dirname "$0" )" && pwd )"
. $SCRIPT_HOME/env.sh


MYSQL=$(docker run \
	-d \
	-p 3306:3306 \
	-v $APPS/mysql/data:/var/lib/mysql \
	-e MYSQL_PASS=mysql \
	--name mysql \
	tutum/mysql:5.6)
echo "Started MySQL in container $MYSQL"