#!/bin/bash

set -e

# vagrant up


SCRIPT_HOME="$( cd "$( dirname "$0" )" && pwd )"

cd $SCRIPT_HOME/..

case "$1" in
	ssh)
		vagrant ssh
		;;
	up)
		vagrant up
		;;
	update)
		git pull
		vagrant ssh -c "sudo /vagrant/bin/dk update"
		;;
	*)
		vagrant ssh -c "sudo /vagrant/bin/dk $1"
		;;
esac

cd - > /dev/null