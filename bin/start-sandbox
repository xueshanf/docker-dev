#!/bin/bash
set -e #-x

APPS=${APPS:-/mnt/apps}

SCRIPT_HOME="$( cd "$( dirname "$0" )" && pwd )"
. $SCRIPT_HOME/env.sh

BOX=$(docker run \
    -i -t \
    -v /vagrant/test:/vagrant \
    --name sandbox \
    --link redis:redis \
    --link zookeeper:zookeeper \
    --link kafka:kafka \
    --link mysql:mysql \
    ubuntu bash -l
)
echo "Started SandBox in container $BOX"