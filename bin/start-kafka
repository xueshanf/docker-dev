#!/bin/bash
set -e #-x

APPS=${APPS:-/mnt/apps}

SCRIPT_HOME="$( cd "$( dirname "$0" )" && pwd )"
. $SCRIPT_HOME/env.sh

if ! is_running zookeeper; then start-zookeeper; fi

KAFKA=$(docker run \
	-d \
	-p 9092:9092 \
	-v $APPS/kafka/data:/data \
	-v $APPS/kafka/logs:/logs \
	--name kafka \
	--link zookeeper:zookeeper \
	$DOCKER_REPO/kafka
    )
echo "Started KAFKA in container $KAFKA"